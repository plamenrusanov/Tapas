@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на информация";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Изтриването на информация ще изтрие и акаунта, който впоследствие няма да може да бъде възтановен.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                @Html.Label("Парола")
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Изтрий информацията и акаунта</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}