@model List<Tapas.Web.ViewModels.Administration.Sizes.EditSizeModel>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<h4>ProductSize</h4>
<hr />

<ul>
    @for (int i = 0; i < Model.Count; i++)
    {
        <li class="row">
            <div class="col-md-4">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="@Model[i].SizeName" class="control-label"></label>
                        <input asp-for="@Model[i].SizeName" class="form-control" />
                        <span asp-validation-for="@Model[i].SizeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].Price" class="control-label"></label>
                        <input asp-for="@Model[i].Price" class="form-control" />
                        <span asp-validation-for="@Model[i].Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].Weight" class="control-label"></label>
                        <input asp-for="@Model[i].Weight" class="form-control" />
                        <span asp-validation-for="@Model[i].Weight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].MaxProductsInPackage" class="control-label"></label>
                        <input asp-for="@Model[i].MaxProductsInPackage" class="form-control" />
                        <span asp-validation-for="@Model[i].MaxProductsInPackage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model[i].PackageId" class="control-label"></label>
                        <select asp-for="@Model[i].PackageId" class="form-control" asp-items="ViewBag.PackageId"></select>
                    </div>
                   
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </li>
    }
</ul>

<div>
    <a asp-action="Index">Back to List</a>
</div>

