@model Tapas.Web.ViewModels.Administration.Packages.PackageInputModel

@{
    ViewData["Title"] = "Добави опаковка";
}
<h1 class="text-center">Добавяне на опаковка</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administration" asp-controller="Packages" asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary"></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Administration" asp-controller="Packages" asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
