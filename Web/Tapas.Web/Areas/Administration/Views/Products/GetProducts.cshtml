@model List<Tapas.Web.ViewModels.Administration.Products.DetailsProductViewModel>
@{
    Layout = "_AdminLayout";
    bool isDeleted = (bool)ViewData["IsDeleted"];
}

<h1 class="text-center">@ViewData["Title"] продукти</h1>

<hr class="hr-tapas" />

<div class="container bg-light">
    <table class="table">
        <thead>
            <tr class="row">
                <th class="col-sm-3">
                    @Html.Label("Име")
                </th>
                <th class="col-sm-3">
                    @Html.Label("Категория")
                </th>
                <th class="col-sm-2">
                    @Html.Label("Добави размер")
                </th>
                <th class="col-sm-2">
                    @Html.Label("Редактирай")
                </th>
                @if (isDeleted)
                {
                    <th class="col-sm-2">
                        @Html.Label("Активирай")
                    </th>
                }
                else
                {
                    <th class="col-sm-2">
                        @Html.Label("Изтрий")
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="row">
                <td class="col-sm-3">
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td class="col-sm-3">
                    @Html.DisplayFor(x => item.CategoryName)
                </td>
                <td class="col-sm-2">
                    @*<a class="btn btn-info btn-sm" href="/Administration/Sizes/Add?productId=@item.Id">Добави размер</a>*@
                </td>
                <td class="col-sm-2">
                    <a class="btn btn-info btn-sm" href="/Administration/Products/Edit?productId=@item.Id">Редактирай</a>
                </td>
                @if (isDeleted)
                {
                    <td class="col-sm-2">
                        <a class="btn btn-danger btn-sm" href="/Administration/Products/Activate?productId=@item.Id">Активирай</a>
                    </td>
                }
                else
                {
                    <td class="col-sm-2">
                        <a class="btn btn-danger btn-sm" href="/Administration/Products/Delete?productId=@item.Id">Изтрий</a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>