@model Tapas.Web.ViewModels.Administration.Products.EditProductViewModel
@{
  ViewData["Title"] = "Edit";
}

<h1 class="text-center">Редактирай продукта</h1>




<form enctype="multipart/form-data" asp-area="Administration" asp-controller="Products" asp-action="Edit" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
    @Html.HiddenFor(x => x.ImageUrl, new { @class = "form-control" })

    <hr class="hr-tapas" />
    <!--Name and Price-->
    <div class="row">
        <div class="form-group col-sm-6">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <h3>@Html.LabelFor(x => x.Name, "Продукт")</h3>
                </div>
                <div class="editor-field col-sm-6">
                    @Html.EditorFor(x => x.Name)
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group col-sm-6">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <h3>@Html.LabelFor(x => x.Price, "Цена")</h3>
                </div>
                <div class="editor-field col-sm-6">
                    @Html.EditorFor(x => x.Price, new { @class = "form-control", @type = "text" })
                    <h6>@Html.LabelFor(x => x.Price, "Ползвай запетая!")</h6>
                    @Html.ValidationMessageFor(x => x.Price, string.Empty, new { htmlAttributes = new { @class = "text-danger", @color = "red" } })
                </div>
            </div>
        </div>
    </div>
    <hr class="hr-tapas" />
    <!--Allergens-->
    <div class="row form-group ">
        <div class="col-sm-3 text-center">
            <h3>@Html.LabelFor(x => x.Allergens, "Алергени")</h3>
        </div>
        <div class="col-sm-9 ">
            <div class="row">
                @for (var a = 0;a <  Model.Allergens.Count; a++)
                {
                <div class="col-sm-1">
                    <div class="row">
                        @Html.LabelFor(x => x.Allergens[a], Model.Allergens[a].Text)
                    </div>
                    <div class="row">
                        @Html.EditorFor(m => m.Allergens[a].Selected)
                        @Html.HiddenFor(m => m.Allergens[a].Text)
                        @Html.HiddenFor(m => m.Allergens[a].Value)
                    </div>
                   
                </div>
                }
            </div>
        </div>
    </div>
    <hr class="hr-tapas" />
    <!--Image-->
    <div class="row">
        <div class="col-md-6">
            <img class="img-thumbnail" src="https://res.cloudinary.com@(Model.ImageUrl)" width="400" height="270" alt="@Model.Name">
        </div>
        <div class="col-md-6  form-group ">
            <div class="editor-label">
                <h3>@Html.LabelFor(model => model.Image, "Нова снимка")</h3>
            </div>
            <div class="form-control-file editor-field">
                @Html.TextBoxFor(model => model.Image, new { type = "file", @class="form-group", @title=@Model.Name})
                @Html.ValidationMessageFor(model => model.Image)
            </div>
        </div>
    </div>
    <hr class="hr-tapas" />
    <!--Category-->
    <div class="row form-group ">
        <div class="col-md-3">
            <h3>@Html.LabelFor(model => model.CategoryId, "Категория", new { })</h3>
        </div>
        <div class="col-md-auto ">
            @Html.DropDownListFor(model => model.CategoryId, Model.AvailableCategories, new { @class="form-control"})
        </div>
    </div>
    <hr class="hr-tapas" />
    <div class="row">
        <div class="col-md-6 form-group text-center">
            <button type="submit" class="btn btn-primary btn-lg active">Edit</button>
        </div>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



