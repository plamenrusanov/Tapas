@model Tapas.Web.ViewModels.Administration.Products.DetailsProductViewModel

@{
    ViewData["Title"] = "Details";
}

<main>
    <h1 class="text-center">Details</h1>

    <hr class="hr-tapas"/>

    <div class="mx-auto">
        <div class="row d-flex justify-content-around">
            <div class="col-sm-6  flex-column">
                <img class="card-img-top" src="https://res.cloudinary.com@(Model.ImageUrl)" width="400" height="270" alt="@Model.Name">
            </div>

            <div class="col-sm-6 flex-column">
                <div class="row">
                    <div class="col-sm-6 flex-column">
                        <h2 class="text-center">@Html.LabelFor(x => x.Name)</h2>
                    </div>
                    <div class="col-sm-6 flex-column">
                        <h3 class="text-center">@Html.DisplayFor(x => x.Name)</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 flex-column">
                        <h2 class="text-center">@Html.LabelFor(x => x.Price)</h2>
                    </div>
                    <div class="col-sm-6 flex-column">
                        <h3 class="text-center">@Html.DisplayFor(x => x.Price)</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 flex-column">
                        <h2 class="text-center">@Html.LabelFor(x => x.CategoryName)</h2>
                    </div>
                    <div class="col-sm-6 flex-column">
                        <h2 class="text-center">@Html.DisplayFor(x => x.CategoryName)</h2>
                    </div>
                </div>
            </div>
        </div>
        <hr class="hr-tapas" />
        <div class="row">
            @foreach (var allergen in Model.Allergens)
            {
                <div class="col-md-1">
                    <img src="https://res.cloudinary.com@(allergen.ImageUrl)" width="45" height="45" alt="@allergen.Name">
                    <span>@Html.Label(allergen.Name)</span>
                </div>
            }
        </div>
        <hr class="hr-tapas" />
        <div class="text-center">
            <a onclick="history.back()" class="btn btn-secondary btn-lg active bg-event">Назад</a>
            <a href="~/Administration/Products/Edit?productId=@Model.Id" class="btn btn-secondary btn-lg active bg-event" role="button" area-pressed="true">Редактирай</a>
            <a href="~/Administration/Products/Delete?productId=@Model.Id" class="btn btn-secondary btn-lg active bg-event" role="button" area-pressed="true">Изтрий</a>
        </div>
    </div>
</main>