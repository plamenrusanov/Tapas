@using Tapas.Common
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="Description" content="Тапасресторант.бг е саит за поръчка и доставка на храна. В менюто може да намерите салати, пици, рибa, ястия от пилешко и свинско месо, запеканки и други. Правим доставка в град Русе.  Author: Plamen Rusanov, Category: Food delivery,">
    <title>Tapas</title>
    <meta name="keywords" content="Тапас русе меню, поръчка на храна русе, доставка на храна русе, доставка на пици"/>
    <meta name="googlebot" content="all" />
    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" media="screen,projection" />
    <link href="~/lib/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/css/home/index.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" media="screen,projection">
    @this.RenderSection("Style", required: false)
</head>
<body>
    <button onclick="topFunction()" id="topBtn" title="Go to top"><i class="fa fa-chevron-up c-mocca" aria-hidden="true"></i></button>
    @this.RenderBody()

<environment names="Development">
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/materialize/js/materialize.min.js"></script>
    <script src="~/lib/materialize/js/init.js"></script>
    <script src="~/js/home/index.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript" src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/lib/materialize/js/init.js"></script>
    <script src="~/js/home/index.js" asp-append-version="true"></script>
</environment>

    @this.RenderSection("Scripts", required: false)
</body>
</html>
