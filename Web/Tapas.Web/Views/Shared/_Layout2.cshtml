<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParallaxDemo</title>
    @*<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />*@
    <link href="~/css/shared/site.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/css/shared/layout.css" rel="stylesheet" asp-append-version="true"/>
    @await RenderSectionAsync("Style", required: false)
</head>
<body>
    <header>
        <nav class="navTop">
            <ul class="layoutUl">
                <!--FullScreen-->
                <li class="layoutUlLiFull">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">ParallaxDemo</a>
                </li>
                <li class="layoutUlLiFull">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="layoutUlLiFull">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <!--Mobile-->
                <li class="layoutUlLiMobile">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><img class="logoMobile" src="~/logo.jpg" width="40" height="40"/></a>
                </li>
                <li class="layoutUlLiMobile">
                    <a asp-area="Administration" asp-controller="Products" asp-action="Index"><img class="menuMobile" src="/menu.png" width="40" height="40" /></a>
                </li>
                <li class="layoutUlLiMobile">
                    <a class="cartMobile" asp-area="" asp-controller="ShoppingCart" asp-action="Index">🛒</a>
                </li>
                <li class="layoutUlLiMobile">
                    <a href="tel:+359890321780"><img class="phoneMobile" src="~/phone.png" width="40" height="40"/></a>
                </li>
                <li class="layoutUlLiMobile rigth">
                    <a id="list" onclick="showHideDropdown()" onblur="bl()" href="#"><img class="list" src="~/list.jpg" width="40" height="40"/> </a>
                </li>
            </ul>
            <ul class="mobileDropdown" id="mobileDropdown">
                <li class="layoutUlLiDrop">
                    <a class="dropLinks" asp-area="" asp-controller="Home" asp-action="Index">ParallaxDemo</a>
                </li>
                <li class="layoutUlLiDrop">
                    <a class="dropLinks" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="layoutUlLiDrop">
                    <a class="dropLinks" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="containerDemo">
            &copy; 2021 - ParallaxDemo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>*@
    @*<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>*@
    <script src="~/js/shared/site.js" asp-append-version="true"></script>
    <script src="~/js/shared/layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
