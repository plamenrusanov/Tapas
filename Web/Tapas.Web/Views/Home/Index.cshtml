@model Tapas.Web.ViewModels.Home.HomeIndexViewModel
@using Tapas.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4 text-center">@GlobalConstants.SystemName</h1>
            <div class="list-group">
                @foreach (var item in Model.Categories)
                {
                    <a asp-controller="Home" asp-action="GetProductsByCategory" asp-route-categoryId="@item.Id" class="btn btn-default list-group-item"><h3>@item.Name</h3></a>
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <!--Carosel-->

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    @*@*<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>*@
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/Images/tapas-masa s hrana.jpg" height="350" width="900" alt="First slide">
                    </div>
                    @*<div class="carousel-item">
                            <img class="d-block img-fluid" src="~/Images/vegetables.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                        </div>*@
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <a class=" btn col-lg-4 col-md-6 mb-4" href="~/ShopingCart/AddItem?productId=@product.Id">
                        <div class="card h-100">
                            <img class="card-img-top" src="https://res.cloudinary.com@(product.ImageUrl)" width="200" height="200" alt="@product.Name">
                            <div class="card-body">
                                <h4 class="text-center"> @product.Name </h4>
                                <h6>@product.Price лв.&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;гр.</h6>
                            </div>
                        </div>
                    </a>
                }

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
