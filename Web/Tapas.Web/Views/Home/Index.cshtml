                        </li>
                    }
                    else if (this.User.IsInRole(GlobalConstants.OperatorName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index" title="Orders">Поръчки</a>
                        </li>

                    }
